{
  "name": "@marozzocom/marozzo-ui",
  "version": "0.12.4",
  "description": "React UI components used by marozzo.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:puppeteer",
    "test:unit": "jest",
    "test:puppeteer": "jest --config=jest.puppeteer.config.js",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook -c .storybook -o storybook-static --quiet",
    "clean": "rimraf dist/*",
    "storybook-test-clean": "npm run build:storybook & npm run test && npm run clean",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.prod.json",
    "release": "standard-version && npm run build && git push --follow-tags origin master && npm publish",
    "commit": "npx git-cz",
    "build:force": "tsc -p tsconfig.prod.json",
    "watch": "tsc -p tsconfig.prod.json --watch",
    "lint": "eslint --ext=ts,tsx src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marozzocom/marozzo-ui.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "keywords": [
    "react",
    "ui",
    "components"
  ],
  "author": "Ilkka Hartikainen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marozzocom/marozzo-ui/issues"
  },
  "homepage": "https://github.com/marozzocom/marozzo-ui#readme",
  "dependencies": {
    "color": "^3.1.2",
    "deepmerge": "^4.2.2",
    "emotion": "^10.0.27",
    "eventemitter3": "^4.0.0",
    "facepaint": "^1.2.1",
    "focus-visible": "^5.0.2",
    "framer-motion": "^1.8.4",
    "markdown-to-jsx": "^6.11.0",
    "nanoid": "^2.1.11"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.28",
    "@types/color": "^3.0.1",
    "@types/facepaint": "^1.2.1",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@babel/core": "^7.8.6",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-links": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "@testing-library/react": "^9.4.1",
    "@types/expect-puppeteer": "^4.4.0",
    "@types/jest": "^25.1.3",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/markdown-to-jsx": "^6.11.0",
    "@types/nanoid": "^2.1.0",
    "@types/puppeteer": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-puppeteer": "^4.4.0",
    "pptr-testing-library": "^0.4.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "puppeteer": "^2.1.1",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "webpack-cli": "^3.3.11",
    "typescript": "^3.8.3",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "",
      "defaultScope": "",
      "defaultSubject": "",
      "defaultBody": "",
      "defaultIssues": ""
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
