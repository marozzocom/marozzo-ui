{
  "name": "@marozzocom/marozzo-ui",
  "version": "0.0.26",
  "description": "React UI components used by marozzo.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:puppeteer",
    "test:unit": "jest",
    "test:puppeteer": "jest --config=jest.puppeteer.config.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o storybook-static --quiet",
    "clean": "rimraf dist/*",
    "prebuild": "npm run build-storybook && npm run test && npm run clean",
    "build": "tsc -p tsconfig.prod.json",
    "release": "npm version patch && npm run build && npm run commit && npm publish",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marozzocom/marozzo-ui.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "keywords": [
    "react",
    "ui",
    "components"
  ],
  "author": "Ilkka Hartikainen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marozzocom/marozzo-ui/issues"
  },
  "homepage": "https://github.com/marozzocom/marozzo-ui#readme",
  "dependencies": {
    "@emotion/core": "^10.0.22",
    "@styled-system/css": "^5.1.4",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/styled-system": "^5.1.4",
    "@types/styled-system__css": "^5.0.4",
    "emotion": "^10.0.23",
    "emotion-theming": "^10.0.19",
    "framer-motion": "^1.7.0",
    "nanoid": "^2.1.8",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-system": "^5.1.4",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@testing-library/react": "^9.4.0",
    "@types/expect-puppeteer": "^3.3.3",
    "@types/jest": "^24.0.23",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/nanoid": "^2.1.0",
    "@types/puppeteer": "^2.0.0",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-puppeteer": "^4.4.0",
    "puppeteer": "^2.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "webpack-cli": "^3.3.10"
  },
  "config": {
    "commitizen": {      
      "path": "./node_modules/cz-conventional-changelog",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "",
      "defaultScope": "",        
      "defaultSubject": "",
      "defaultBody": "",
      "defaultIssues": ""
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
